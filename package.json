{
  "name": "discus-lib",
  "version": "1.2.2",
  "description": "A user discussion component library where the user can comment on a post and discuss among other users.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:esm && npm run build:cjs && npm run copy:assets",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "copy:assets": "copyfiles -u 1 src/assets/**/* dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemanth506/discus-lib"
  },
  "keywords": [
    "react",
    "typescript",
    "component",
    "comments section"
  ],
  "author": "Hemanth Raaj G (hemanthraaj31@gmail.com)",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.103",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "tslib": "^2.6.3",
    "typescript": "^4.9.5",
    "uuid": "^10.0.0",
    "web-vitals": "^2.1.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "uuid": "10.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
